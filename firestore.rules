rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow the user to only write and read in their collections and subcollections
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      match /{subcollection=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
